<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEvent">

    <TextView
        android:id="@+id/tvAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuevo evento"
        android:textSize="35sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tilEventName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilEventName"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_marginTop="30sp"
        app:layout_constraintBottom_toTopOf="@+id/tvCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddEvent">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginTop="30sp"
        app:layout_constraintBottom_toTopOf="@+id/linlEventsImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilEventName" />

    <LinearLayout
        android:id="@+id/linlEventsImage"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategory">

        <ImageView
            android:id="@+id/ivComet"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/comet" />

        <ImageView
            android:id="@+id/ivMilkyway"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/milkyway" />

        <ImageView
            android:id="@+id/ivShootingstar"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/shootingstar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl2EventsImage"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlEventsImage">

        <ImageView
            android:id="@+id/ivFullmoon"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/fullmoon" />

        <ImageView
            android:id="@+id/ivPlanet"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/planeta" />

        <ImageView
            android:id="@+id/ivEclipse"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/eclipse" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl3EventsImage"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linl2EventsImage">

        <ImageView
            android:id="@+id/ivRocket"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rocket" />

        <ImageView
            android:id="@+id/ivSatellite"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/satellite" />

        <ImageView
            android:id="@+id/ivUfo"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ufo" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:layout_marginTop="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnAdd"
        app:layout_constraintTop_toBottomOf="@+id/linl3EventsImage" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toStartOf="@+id/btnTimePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <Button
        android:id="@+id/btnTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        android:layout_marginTop="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnDatePicker"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <Button
        android:id="@+id/btnAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70sp"
        android:text="Añadir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <TextView
        android:id="@+id/tvError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Error"
        android:textStyle="italic"
        android:textColor="#C62C2C"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.99"
        app:layout_constraintHorizontal_bias="0.05"
        />

</androidx.constraintlayout.widget.ConstraintLayout>