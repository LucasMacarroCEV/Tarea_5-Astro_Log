<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewEvent">

    <TextView
        android:id="@+id/tvAddEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Añadir evento"
        android:textSize="30sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvCategory"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tvCategory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoría"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/linlEventsImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAddEvent" />

    <LinearLayout
        android:id="@+id/linlEventsImage"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvCategory">

        <ImageView
            android:id="@+id/ivComet"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/comet" />

        <ImageView
            android:id="@+id/ivMilkyway"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/milkyway" />

        <ImageView
            android:id="@+id/ivShootingstar"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/shootingstar" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl2EventsImage"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linlEventsImage">

        <ImageView
            android:id="@+id/ivFullmoon"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/fullmoon" />

        <ImageView
            android:id="@+id/ivPlanet"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/planeta" />

        <ImageView
            android:id="@+id/ivEclipse"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/eclipse" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linl3EventsImage"
        android:layout_width="300sp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linl2EventsImage">

        <ImageView
            android:id="@+id/ivRocket"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/rocket" />

        <ImageView
            android:id="@+id/ivStallite"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/satellite" />

        <ImageView
            android:id="@+id/ivUfo"
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ufo" />
    </LinearLayout>

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:textSize="20sp"
        android:textStyle="italic"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linl3EventsImage" />

    <Button
        android:id="@+id/btnDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        app:layout_constraintEnd_toStartOf="@+id/btnTimePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate" />

    <Button
        android:id="@+id/btnTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvDate"
        app:layout_constraintStart_toEndOf="@+id/btnDatePicker"
        />

</androidx.constraintlayout.widget.ConstraintLayout>